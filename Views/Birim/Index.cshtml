@model List<Birim>

@if (TempData["basarili"] != null)
{
    <h2 style="color:red">@TempData["basarili"]</h2>
}

<div class="main-content">

<div class="container">
    <div class="row pt-3 pb-4">

        <div>

            <h1>Birim</h1>

        </div>
    </div>

    <table class="table table-bordered">

        <thead>

            <tr>
                <th>
                    Id
                </th>

                <th>
                    Birim
                </th>

            </tr>

        </thead>

        <tbody>
            @foreach (var birim in Model)
            {
                <tr>
                    <td>@birim.Id</td>
                    <td>@birim.Ad</td>
                    <td>
                        <a asp-controller="Birim" asp-action="Guncelle" asp-route-id="@birim.Id" type="button" class="btn btn-success" style="width:250px">Güncelle</a>
                    </td>

                    <td>
                        <a asp-controller="Birim" asp-action="Sil" asp-route-id="@birim.Id" type="button" class="btn btn-danger" style="width:250px">Sil</a>
                    </td>

                </tr>
            }
        </tbody>

    </table>

    <div class="row pt-3 pb-2">

        <div>
            <a asp-controller="Birim" asp-action="Ekle" class="btn btn-lg btn-primary" type="button">
                Yeni Birim Oluştur
            </a>

        </div>
    </div>

</div>

</div>
